              {{#select actor.system.skills.maneuver.defenseOnly}}
                {{#each config.yesNo as |name type|}}
                  <option value='{{type}}'>{{localize name}}</option>
                {{/each}}
              {{/select}}
            </select>

            {{localize 'torgeternity.skills.taunt'}}
            <select name='system.skills.taunt.defenseOnly' class='input-box'>
              {{#select actor.system.skills.taunt.defenseOnly}}
                {{#each config.yesNo as |name type|}}
                  <option value='{{type}}'>{{localize name}}</option>
                {{/each}}
              {{/select}}
            </select>

            {{localize 'torgeternity.skills.trick'}}
