  <div class='threat-section-skills'>
    <div class='section-bar'>
      {{localize 'torgeternity.sheetLabels.skills'}}
      <span style='float:right'>
        <a class='skill-edit-toggle'>
          <i class='fas fa-edit'></i>
        </a>
      </span>
    </div>

    <div class='threat-block'>
      <span class='inline-skill-list'>
        {{#each actor.system.skills as |content name|}}
          {{#if content.isThreatSkill}}
            <span class='inline-skill-item'>
              <a
                class='skill-roll'
                data-testtype='skill'
                data-baseattribute='{{content.baseAttribute}}'
                data-adds='{{content.adds}}'
                data-value='{{content.value}}'
                data-unskilleduse='{{content.unskilledUse}}'
                data-name='{{name}}'
              >
                {{localize (concatSkillName name)}}
              </a>
              {{#if content.isFav}}
                <a class='toggleFav checked'>
                  <i class='far fa-star'></i>
                </a>
              {{/if}}
              &nbsp;{{content.value}}
            </span>

          {{/if}}
        {{/each}}
      </span>
    </div>

    <div class='threat-editor' id='threat-editor'>
      {{#if actor.system.editstate}}
        <div class='skill-list-edit'>
          {{#each actor.system.skills as |skill key|}}
            <div class='skill-element-edit'>
              <span
                style='position:relative'
                class='skill-list'
                data-testtype='skill'
                data-baseattribute='{{skill.baseAttribute}}'
                data-adds='{{skill.adds}}'
                data-value='{{skill.value}}'
                data-unskilleduse='{{skill.unskilledUse}}'
                data-name='{{key}}'
                data-tooltip='{{localize "torgeternity.sheetLabels.toolTipClickToAdd"}}'
              >{{localize (concatSkillName key)}}
              </span>
              <span class='inputsFav'>
                <input
                  data-skill='{{key}}'
                  type='number'
                  class='small-input'
                  value='{{skill.value}}'
                  placeholder='-'
                />

                <a class='toggleFav {{checked skill.isFav}}'>
                  <i class='far fa-star'></i>
                </a>
                <input
                  class='favCheck'
                  type='checkbox'
                  name='system.skills.{{key}}.isFav'
                  {{checked skill.isFav}}
                  data-dtype='Boolean'
                />
              </span>
            </div>
          {{/each}}
        </div>

        <div class='defenseChecks'>
          <div>
            Defense Only?
          </div>
          <span>
            {{localize 'torgeternity.skills.intimidation'}}
            <select name='system.skills.intimidation.defenseOnly' class='input-box'>
              {{#select actor.system.skills.intimidation.defenseOnly}}
                {{#each config.yesNo as |name type|}}
                  <option value='{{type}}'>{{localize name}}</option>
                {{/each}}
              {{/select}}
            </select>

            {{localize 'torgeternity.skills.maneuver'}}
