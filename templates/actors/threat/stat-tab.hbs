          <a
            class='skill-roll'
            data-testType='attribute'
            data-value='{{actor.system.attributes.dexterity.value}}'
            data-name='dexterity'
            data-baseAttribute='dexterity'
            data-adds='0'
            data-unskilledUse='1'
